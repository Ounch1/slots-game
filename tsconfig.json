{
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"outDir": "dist",
		"baseUrl": "./", // Required for "paths" to work
		"paths": {
			"@/*": ["src/*"]
		}
	},
	"include": ["src"]
}
